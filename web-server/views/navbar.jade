nav.navbar.navbar-inverse(role='navigation')
  .container-fluid

    .navbar-header
      button.navbar-toggle(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-5')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/') Learners Guild

    .collapse.navbar-collapse
      ul.nav.navbar-nav

        li
          a(href='https://guide.learnersguild.org') Guide

        li.dropdown
          a.dropdown-toggle(href='#', data-toggle='dropdown')
            | Phases
            b.caret
          ul.dropdown-menu(role='menu')
            each phase in phases
              li
                a(href='/phases/'+phase.number) Phase #{phase.number}

        li.dropdown
          a.dropdown-toggle(href='#', data-toggle='dropdown')
            | Modules
            b.caret
          ul.dropdown-menu(role='menu')
            each module, id in modules
              li
                a(href='/modules/'+id)= module.name

        li.dropdown
          a(href='/skills') Skills

        if process.env.NODE_ENV === 'development'
          li.dropdown
            a(href='/digest') Digest

      .navbar-text.navbar-right
        .list-inline
          li
            a.navbar-link(href="")= user.handle
          li
            a.navbar-link(href=logoutUrl) logout
